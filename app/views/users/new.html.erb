<% content_for :title, "Create account" %>

<div class="min-w-full">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-900 mb-5 text-red-300 font-medium rounded-lg">
      <%= alert %>
    </p>
  <% end %>
  <h1 class="text-4xl font-extrabold my-4 text-black">
    Create account
  </h1>
  <%= form_with model: @user, url: signup_path, local: true, class: "contents text-black" do |form| %>
    <div class="field">
      <%= form.email_field :email_address,
            autofocus: true,
            placeholder: "Enter your email address",
            value: @user.email_address,
            class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:email_address].any? %>
        <p class="text-red-500">
          <%= @user.errors.full_messages_for(:email_address).join(", ") %>
        </p>
      <% end %>
    </div>
    <div class="field">
      <%= form.password_field :password,
            placeholder: "Enter your password",
            maxlength: 72,
            class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:password].any? %>
        <p class="text-red-500">
          <%= @user.errors.full_messages_for(:password).join(", ") %>
        </p>
      <% end %>
    </div>
    <div class="field">
      <%= form.password_field :password_confirmation,
            placeholder: "Confirm your password",
            maxlength: 72,
            class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      <% if @user.errors[:password_confirmation].any? %>
        <p class="text-red-500">
          <%= @user.errors.full_messages_for(:password_confirmation).join(", ") %>
        </p>
      <% end %>
    </div>
    <br />
    <%= form.submit "Create account",
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  <% end %>
</div>
